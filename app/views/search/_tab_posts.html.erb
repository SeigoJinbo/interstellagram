<div class="tab-pane fade show active" id="pills-posts" role="tabpanel" aria-labelledby="pills-posts-tab">
	<% if @posts.exists? && @posts.count != 0 %>
		<div class="white-circle" style="position: absolute; top: 139px; right: 182px;"></div>
		<div class="white-circle" style="position: absolute; top: 156px; right: 200px;"></div>
		<div class="white-circle" style="position: absolute; top: 156px; right: 290px;"></div>
		<div style="position: absolute; top: 142px; left: 60px; z-index: -1;">
			<%= render 'svgs/accents/search_posts_line' %>
		</div>
		<div style="margin-top: 44px;">
			<%= render 'posts/grid', posts: @posts %>
		</div>
	<% end %>
	<div style="height: 60px;"></div>
</div>

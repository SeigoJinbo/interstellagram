<%= render @post %>
<% pre_bookmark = @post.bookmarks.find { |bookmark| bookmark.user_id == current_user.id} %>
<% if pre_bookmark %>
  <%= link_to post_bookmark_path(@post, pre_bookmark), method: :delete do %>
    <p>unbookmark</p>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(@post), method: :post do %>
    <p>bookmark</p>
  <% end %>
<% end %>

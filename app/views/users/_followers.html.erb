<div class="modal fade" id="userFollowers" tabindex="-1" role="dialog" aria-labelledby="userFollowersTitle" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="userFollowersTitle">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				followers
				<% @user.followers.each do |user| %>
					<%= user.user_name %>
				<% end %>

			</div>
			<div class="modal-footer">
				<div data-dismiss="modal"><%= render 'svgs/buttons/confirm_btn' %></div>
			</div>
		</div>
	</div>
</div>

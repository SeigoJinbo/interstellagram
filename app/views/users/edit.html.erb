<h2>Edit</h2>
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :user_name,
                required: false,
                autofocus: true %>
    <%= f.input :name,
                required: false,
                autofocus: true %>
    <%= f.input :birthday,
                required: false,
                autofocus: true %>
    <%= f.input :gender,
                required: false,
                autofocus: true %>
    <%= f.input :bio,
                required: false,
                autofocus: true %>
    <%= f.input :website,
                required: false,
                autofocus: true %>
    <%= f.input :image, as: :file, label: 'Please upload an project photo' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
<%= link_to "Back", :back %>

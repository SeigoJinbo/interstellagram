<div class="form-container form-login">
	<div style="position: absolute; top: -16px;">
		<%= render 'svgs/accents/form_accent_t' %>
	</div>
	<div class="form-box" style="height: 328px;"></div>

	<div class="login-header" style="width: 195px; right: 109px;">
		<div class="white-circle"></div>
		<h6 class="form-label" style="width: 180px;">ACCOUNT SETTINGS</h6>
	</div>
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<div class="form-inputs">
			<div class="form-inputs-login-container" style="right: 62px;">
				<div class="form-user-inputs">
					<h6 class="form-label" style="width: 240px;">NEW PASSWORD</h6>
					<%= f.input :password,
                placeholder: "Keep blank to leave unchanged",
                required: false,
                input_html: { autocomplete: "new-password" } %>
				</div>

				<div class="form-user-inputs">
					<h6 class="form-label" style="width: 240px;">NEW PASSWORD CONFIRMATION</h6>
					<%= f.input :password_confirmation,
                placeholder: "Re-enter new password",
                required: false,
                input_html: { autocomplete: "new-password" } %>
				</div>

				<div class="form-user-inputs">
					<h6 class="form-label" style="width: 240px;">CURRENT PASSWORD</h6>
					<%= f.input :current_password,
                placeholder: "Enter to confirm changes",
                required: false,
                input_html: { autocomplete: "current-password" } %>
				</div>

			</div>

			<div style="position: absolute; top: 245px; right: 256px;">
				<%# if false %>
				<%= link_to :back do %>
					<%= render 'svgs/buttons/cancel_btn' %>
				<% end %>
				<%# end %>
			</div>

			<label style="position: absolute; top: 245px; right: 31px; height: 45px; width: 45px;">
				<span style="display: none;">
					<%= f.button :submit, "Update" %>
				</span>
			</label>
			<div style="position: absolute; top: 245px; right: 31px; z-index: -1;">
				<%= render 'svgs/buttons/confirm_btn' %>
			</div>
			<div style="position: absolute; top: 255px; right: 80px;">
				<%= render 'svgs/accents/button_dashed_line' %>
			</div>
		<% end %>
	</div>
	<div style="position: absolute; top: 328px; right: 205px;">
		<%= render 'svgs/accents/form_lines_b' %>
	</div>
	<div class="white-circle" style="position: absolute; top: 375px; right: 201px;"></div>
	<div class="yellow-line" style="position: absolute; top: 386px; left: 133px; width: 55px;"></div>
	<%= link_to destroy_user_session_path, method: :delete do%>
		<h6 class="form-label" style="position: absolute; top: 373px; left: 133px;;">LOG OUT</h6>
	<% end %>

	<% if false %>
		<%= link_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete do %>
			<h6 class="form-label" style="position: absolute; top: 373px; right: 93px; color: #bf4242;">CLOSE ACCOUNT</h6>
		<% end %>
	<% end %>

</div>

<% if false %>
	<h2>Log in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="form-inputs">
			<%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
			<%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, "Log in" %>
		</div>
	<% end %>

	<%= render "devise/shared/links" %>

<% end %>

<%# --------------------------REFERENCE-------------------------- %>

<div class="form-container form-login">
	<div style="position: absolute; top: -16px;">
		<%= render 'svgs/accents/form_accent_t' %>
	</div>
	<div class="form-box" style="height: 268px;"></div>

	<div class="login-header">
		<div class="white-circle"></div>
		<h6 class="form-label">SIGN IN</h6>
	</div>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="form-inputs">
			<div class="form-inputs-login-container">
				<div class="form-user-inputs">
					<h6 class="form-label">EMAIL</h6>
					<%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
				</div>

				<div class="form-user-inputs">
					<h6 class="form-label">PASSWORD</h6>
					<%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
				</div>

				<div style="display: flex; align-items: center;">
					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					<h6 class="form-label" style="margin-top: 5px;">REMEMBER ME</h6>
				</div>
			</div>

			<label style="position: absolute; top: 203px; right: 26px; height: 45px; width: 45px;">
				<span style="display: none;">
					<%= f.button :submit, "Log in" %>
				</span>
			</label>
			<div style="position: absolute; top: 203px; right: 26px; z-index: -1;">
				<%= render 'svgs/buttons/confirm_btn' %>
			</div>
			<div style="position: absolute; top: 213px; right: 75px;">
				<%= render 'svgs/accents/button_dashed_line' %>
			</div>
		<% end %>
	</div>
	<div style="position: absolute; top: 267px; right: 205px;">
		<%= render 'svgs/accents/form_lines_b' %>
	</div>
	<div class="white-circle" style="position: absolute; top: 314px; right: 201px;"></div>
	<div class="yellow-line" style="position: absolute; top: 325px; right: 138px; width: 56px;"></div>
	<%= link_to new_registration_path(resource_name) do %>
		<h6 class="form-label" style="position: absolute; top: 312px; right: 138px;">SIGN UP</h6>
	<% end %>
</div>
